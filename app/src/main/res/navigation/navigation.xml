<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.epitech.epicture.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_homeFragment_to_loginWebviewFragment"
            app:destination="@id/loginWebviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginWebviewFragment"
        android:name="com.epitech.epicture.LoginWebviewFragment"
        android:label="fragment_login_webview"
        tools:layout="@layout/fragment_login_webview">
        <action
            android:id="@+id/action_loginWebviewFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.epitech.epicture.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
</navigation>